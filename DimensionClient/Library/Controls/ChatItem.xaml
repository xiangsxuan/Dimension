<UserControl x:Class="DimensionClient.Library.Controls.ChatItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="UserControlMain" Loaded="UserControlMain_Loaded" 
             DataContextChanged="UserControlMain_DataContextChanged"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:DimensionClient.Models.ResultModels"
             xmlns:ct="clr-namespace:DimensionClient.Library.Converters"
             >
    <UserControl.Resources>

        <ct:BoolVisibilityConvert x:Key="BoolVisibilityConvert"/>
    </UserControl.Resources>
    <Border x:Name="brdChat" Style="{StaticResource BorderGradualBackground}" MouseLeftButtonUp="BrdChat_MouseLeftButtonUp" TouchUp="BrdChat_TouchUp">
        <Grid Height="40" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="34"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="imgHead" Grid.Column="0" Height="40" Width="40" 
                   Source="{Binding Path=HeadPortrait, Converter={StaticResource ImageSourceOnlineConvert}, ConverterParameter=80}">
                <Image.Clip>
                    <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                </Image.Clip>
            </Image>
            <Grid Grid.Column="1" Margin="7,0,0,0">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Run x:Name="txbNickName" Text="{Binding NickName}" FontSize="15" Foreground="#303133"/>
                    <Run x:Name="txbRemarkName"  Text="{Binding RemarkName}" FontSize="10" Foreground="#C0C4CC"/>
                </TextBlock>
                <TextBlock x:Name="txbLastMessage" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="#909399" TextTrimming="CharacterEllipsis"/>
            </Grid>
            <Grid Grid.Column="2">
                <TextBlock x:Name="txbLastTime" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="#303133"/>
                <Border x:Name="brdBadge"
                        Visibility="{Binding Unread, Converter={StaticResource BoolVisibilityConvert}}"
                        Height="16" MaxWidth="34" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,2" Background="#67C23A" CornerRadius="8">
                    <TextBlock x:Name="txbBadgeNumber" Text="{Binding Unread}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,5,0" Foreground="#FFFFFF" FontSize="11"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
